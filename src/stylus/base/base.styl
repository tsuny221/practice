//text8
.text8
  display block
  overflow hidden
  position relative
  width 250px
  height auto
  margin 100vh auto
  span 
    color black
    font-size 30px
    letter-spacing 0.5em
    line-height 40px
    opacity 0
    transition opacity 10ms 300ms

  &::before
    display block
    content ""
    position absolute
    width 100%
    height 100%
    background-color black 
    transform translateX(-100%)
   
.text8.inview--enter
  span 
    opacity 1
  &::before
    animation cover 700ms 0s easeInOutQuart forwards
@keyframes cover
  0%
    transform translateX(-100%)
  40%
    transform translateX(0)
  60%
    transform translateX(0)
  100%
    transform translateX(100%)
    
