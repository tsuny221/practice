@import '../libs/reset.css'

html, body
  position relative
  min-width 960px
  font-family 'ヒラギノ角ゴ ProN W3', 'Hiragino Kaku Gothic ProN', '游ゴシック', YuGothic, 'メイリオ', Meiryo, sans-serif
  // font-family 'ヒラギノ明朝 ProN W3', 'Hiragino Mincho ProN', '游明朝', YuMincho, 'メイリオ', Meiryo, serif
  font-size 15px
  line-height 1
  // font-feature-settings 'palt'
  // -webkit-font-smoothing antialiased

a
  text-decoration inherit
  color inherit
  // -webkit-tap-highlight-color rgba(0,0,0,0)

img
svg
video
iframe
picture
  display block
  width 100%
.parent
  position relative
  height: 100vh
  margin 10vh 0px
.child
  opacity 0
  position sticky
  top 50%
  left 50%
  width: 250px;
  height: 150px
  background-image url(../img/icon.jpg)
  background-size cover
  transform translate(-50%,-50%)
  transition opacity 500ms easeInOutQuad
  i::before 
    content: "";
    position: absolute;
    background-color #f97242;
    transition transform 100ms easeInOutQuart 
    transform scaleX(0)
  i::after
    content: "";
    position: absolute;
    background-color #f97242;
    transition transform 100ms easeInOutQuart
    transform scaleY(0)

  k=50 l=200
  i:nth-of-type(1):before
    transition-delay l + (1 * k)ms
  i:nth-of-type(1):after  
    transition-delay l + (2 * k)ms
  i:nth-of-type(2):before
    transition-delay l + (3 * k)ms
  i:nth-of-type(2):after
    transition-delay l + (4 * k)ms
.text
  position absolute
  left -25%
  top 50%
  width 100vh
  padding 7px
  color transparent
  background-color #f3462d
  font-size 13px
  font-weight bold
  letter-spacing 0.4em
  text-align center
  text-transform uppercase
  transform scaleX(0)
  transition transform 500ms 500ms easeInOutQuart, color 500ms 1000ms easeInOutQuad

.child.inview--enter
  opacity 1
  i:nth-of-type(1):before
    top: 20px;
    right: 20px;
    width: 250px;
    height: 2px;
    transform scaleX(1)
    transform-origin left
  i:nth-of-type(2):before
    top: 170px;
    right: 20px;
    width: 250px;
    height: 2px;
    transform scaleX(1)
    transform-origin right
  i:nth-of-type(1):after
    top: 20px;
    right: 20px;
    width: 2px;
    height: 150px;
    transform scaleY(1)
    transform-origin top
  i:nth-of-type(2):after
    top: 20px;
    left: -20px;
    width: 2px;
    height: 150px;
    transform scaleY(1)
    transform-origin bottom
  .text
    color white
    transform scaleX(1)
    transform-origin left
